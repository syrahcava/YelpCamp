<% include ../partials/header %>

  <div class="row justify-content-center">
    <div class="col-md-12 text-center">
      <h1>Edit Comment</h1>
    </div>
    <div class="col-xs-12 col-md-6 col-lg-4">
      <form class="" action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=put" method="post">
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>" placeholder="text">
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-lg btn-block">Submit</button>
        </div>
      </form>
      <a href="/campgrounds/<%= campground_id %>">Go Back</a>
    </div>
  </div>

<% include ../partials/footer %>
